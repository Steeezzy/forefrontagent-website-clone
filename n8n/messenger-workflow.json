            "id": "filter",
            "name": "Filter Messages Only",
            "type": "n8n-nodes-base.if",
            "typeVersion": 1,
            "position": [
                460,
                300
            ]
        },
        {
            "parameters": {
                "jsCode": "const entry = $input.item.json.entry?.[0];\nconst messaging = entry?.messaging?.[0];\n\nif (!messaging || !messaging.message) {\n  return [];\n}\n\nreturn {\n  senderId: messaging.sender.id,\n  messageText: messaging.message.text || '',\n  timestamp: messaging.timestamp,\n  pageId: entry.id\n};"
            },
            "id": "parse",
            "name": "Parse Message",
            "type": "n8n-nodes-base.code",
            "typeVersion": 2,
            "position": [
                680,
                240
            ]
        },
        {
            "parameters": {
                "method": "GET",
                "url": "=https://graph.facebook.com/v18.0/{{ $json.senderId }}?fields=first_name,last_name&access_token={{ $env.MESSENGER_PAGE_ACCESS_TOKEN }}",
                "options": {}
            },
            "id": "profile",
            "name": "Get User Profile",
            "type": "n8n-nodes-base.httpRequest",
