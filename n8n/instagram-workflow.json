            "type": "n8n-nodes-base.code",
            "typeVersion": 2,
            "position": [
                680,
                240
            ]
        },
        {
            "parameters": {
                "method": "GET",
                "url": "=https://graph.facebook.com/v18.0/{{ $json.senderId }}?fields=name,username&access_token={{ $env.INSTAGRAM_ACCESS_TOKEN }}",
                "options": {}
